service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if exists(/databases/$(database)/documents/users/$(request.auth.uid)) && (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.admin == true || request.auth.uid == userId);
      allow create: if request.auth != null && !exists(/databases/$(database)/documents/users/$(request.auth.uid));
    }
  }
}